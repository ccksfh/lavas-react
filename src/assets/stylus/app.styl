@value app-header-height from '@/assets/css/variable.css'

.app
    font-family 'Avenir', Helvetica, Arial, sans-serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    text-align center
    color #2c3e50

    .app-view
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        overflow-x hidden
        overflow-y auto
        background #fff

        &::-webkit-scrollbar
            width 0
            background transparent

        &.app-view-with-header
            top app-header-height

        &.transition-slide
            transition transform 0.4s cubic-bezier(.55, 0, .1, 1)

        &.transition-fade
            opacity 1
            transition opacity 1s ease

:global(.slide-left-enter)
    transform translate(100%, 0)

:global(.slide-right-enter)
    transform translate(-100%, 0)

:global(.slide-right-exit-active)
    transform translate(100%, 0)

:global(.slide-left-exit-active)
    transform translate(-100%, 0)

:global(.fade-enter)
    opacity 0

:global(.fade-exit-active)
    opacity 0
